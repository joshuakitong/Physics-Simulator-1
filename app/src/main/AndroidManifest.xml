<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ps.physicssimulator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ChapterActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ValuesActivity"
            android:label="@string/title_activity_values"
            android:parentActivityName=".ChapterActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChapterActivity" />
        </activity>
        <activity
            android:name=".VelocityActivity"
            android:label="@string/title_activity_velocity"
            android:parentActivityName=".ChapterActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChapterActivity" />
        </activity>
        <activity
            android:name=".CalculatorActivity"
            android:label="@string/title_activity_calculator"
            android:theme="@style/AppTheme.NoActionBar" />

        <provider
            android:name=".data.DataProvider"
            android:authorities="com.ps.physicssimulator" />

        <activity
            android:name=".LessonActivity"
            android:label="@string/title_activity_lesson"
            android:parentActivityName=".ChapterActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ps.physicssimulator.ChapterActivity" />
        </activity>
    </application>

</manifest>